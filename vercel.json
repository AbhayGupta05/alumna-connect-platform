{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/alumni-claim/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/create-admin",
      "dest": "/api/index.py"
    },
    {
      "src": "/debug-db",
      "dest": "/api/index.py"
    },
    {
      "src": "/init-db",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
